/* pages/observe/observe.wxss */

.observe-filter{
  position: fixed;
  bottom: 120rpx;
  right: 20rpx;
  width: 80rpx;
  height: 80rpx;
  z-index: 1000;
  border-radius: 40rpx;
}
.observe-filter-icon{
  font-size:28px;
}

#markMap{
  width: 100%;
  height: 100vh;
}

.customCallout {
  box-sizing: border-box;
  background-color: #fff; 
  border-radius: 50rpx;
  width: 100rpx;
  height: 100rpx;
  display: inline-flex;
  padding: 2rpx;
  justify-content: center;
  align-items: center;
}

.customCalloutIcon{
  width: 96rpx;
  height: 96rpx;
  border-radius: 48rpx;
}

.ident-title{
  font-weight: bold;
  padding: 0 20rpx;
}